---
import "../components/angular/zone-bootstrap";
import { NavBarComponent } from "../components/angular/NavBar/NavBar.component";
import { SidebarComponent } from "../components/angular/Sidebar/Sidebar.component";
import { OnThisPageComponent } from "../components/angular/OnThisPage.component";
import { SettingsDialogComponent } from "../components/angular/SerttingsDialog/SettingsDialog.component";
import type { HeadingLink } from "../components/angular/types";
import { resolveBaseSegment } from "@utils/navigation";
import { type NavItem } from "../components/angular/types";
import { strings, type Languages } from "@utils/lang";

interface Props {
  title?: string;
  description?: string;
  sidebarItems: {
    title: string;
    slug: string;
    group?: string;
    href: string;
  }[];
  currentSlug: string;
  headings: HeadingLink[];
  baseHref: string;
  lang: Languages;
  showComments: boolean;
}

const {
  title,
  description,
  sidebarItems,
  currentSlug,
  headings,
  baseHref,
  lang,
  showComments = true,
} = Astro.props as Props;

const subTitle = strings[lang as Languages]["title"];
---

<!doctype html>
<html lang={lang} data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:title" content={title} />
    <title>{title ? `${title} | ${subTitle}` : subTitle}</title>
    {description && <meta name="description" content={description} />}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      const savedComments = localStorage.getItem("personal-blog-comments");
      if (savedComments === "false") {
        const giscus = document.getElementById("giscus-container");
        giscus.style.display = "none";
      }
    </script>
    <style>
      :root {
        color-scheme: light;
        --surface-color: #f8fafc;
        --surface-elevated: #ffffff;
        --border-color: #cbd5f5;
        --text-strong: #0f172a;
        --text-muted: #475569;
        --text-subtle: #64748b;
        --accent-color: #2563eb;
        --body-bg: #f8fafc;
      }
      :root[data-theme="dark"] {
        color-scheme: dark;
        --surface-color: #0f172a;
        --surface-elevated: #111827;
        --border-color: #1f2937;
        --text-strong: #f8fafc;
        --text-muted: #cbd5f5;
        --text-subtle: #a5b4fc;
        --accent-color: #60a5fa;
        --body-bg: #020617;
      }
      body {
        margin: 0;
        background: var(--body-bg);
        color: var(--text-strong);
        font-family:
          "Inter",
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          sans-serif;
        min-height: 100vh;
      }
      main,
      #giscus-container {
        background: var(--surface-elevated);
        border-radius: 1.25rem;
        padding: 2.5rem;
        box-shadow: 0 20px 60px rgba(15, 23, 42, 0.08);
      }
      #giscus-container {
        margin-top: 2rem;
      }
      .layout-container {
        display: grid;
        grid-template-columns: 260px minmax(950px, 1fr) 220px;
        gap: 2rem;
        margin: 0 auto;
        max-width: calc(950px + 260px + 220px + 4rem);
        padding: 2rem;
      }
      .content-area {
        min-width: 0;
      }
      .content-area :global(.page-header) {
        border-bottom: 1px solid var(--border-color);
      }
      .content-area :global(h1) {
        font-size: 2.2rem;
        margin: 1rem 0;
        overflow-wrap: anywhere;
      }
      .content-area :global(.page-header h1) {
        font-size: 2rem;
        margin: 0 0 0.1rem;
        letter-spacing: -0.02em;
      }
      .content-area :global(.publish-date) {
        color: var(--text-strong);
        font-weight: 600;
        font-size: 1rem;
        margin: 0.3rem 0;
      }
      .content-area :global(.reading-time) {
        color: var(--text-strong);
        font-size: 0.9rem;
        margin: 0;
      }
      .content-area :global(.info-box) {
        min-width: 0;
        margin-bottom: 2rem;
      }
      .content-area :global(.info-box + *) {
        margin-top: 0 !important;
      }
      .content-area :global(h2) {
        margin-top: 2.5rem;
        font-size: 1.3rem;
      }
      .content-area :global(h3) {
        margin-top: 1.8rem;
        font-size: 1.2rem;
      }
      .content-area :global(p) {
        line-height: 1.4;
        color: var(--text-muted);
      }
      .content-area :global(li) {
        line-height: 1.7;
      }
      .content-area :global(pre) {
        background: color-mix(in srgb, var(--surface-color) 80%, transparent);
        padding: 1.25rem;
        border-radius: 0.75rem;
        overflow-x: auto;
        border: 1px solid
          color-mix(in srgb, var(--border-color) 60%, transparent);
      }
      .content-area :global(code) {
        font-family: "Space Grotesk", "Fira Code", monospace;
      }
      .content-area :global(a) {
        color: var(--accent-color);
        text-decoration: none;
      }
      .content-area :global(a:hover) {
        text-decoration: underline;
      }
      .content-area :global(hr) {
        border: none;
        border-top: 1px solid var(--border-color);
        margin: 2rem 0;
      }
      .content-area :global(blockquote) {
        border-left: 4px solid var(--accent-color);
        padding-left: 1rem;
        font-style: italic;
        color: var(--text-subtle);
      }
      .content-area :global(table) {
        border-collapse: collapse;
        border: 1px solid var(--border-color);
        width: 100%;
        margin: 1.5rem 0;
      }
      .content-area :global(th),
      .content-area :global(td) {
        border: 1px solid var(--border-color);
        padding: 0.75rem;
        text-align: left;
      }
      .content-area :global(th) {
        background: var(--surface-color);
      }
      @media (max-width: 1200px) {
        .layout-container {
          grid-template-columns: minmax(0, 1fr);
          padding: 1.5rem;
        }
        main {
          padding: 1.5rem;
        }
      }

      /* Collapse Block Styles */
      .content-area :global(.collapse-block) {
        background: color-mix(in srgb, var(--surface-color) 50%, transparent);
        border: 1px solid var(--border-color);
        border-radius: 0.75rem;
        margin: 1.5rem 0;
        overflow: hidden;
        transition: border-color 0.2s ease;
      }
      .content-area :global(.collapse-title) {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 1.25rem;
        font-weight: 600;
        color: var(--text-strong);
        cursor: pointer;
        user-select: none;
        list-style: none;
        transition: background-color 0.2s ease;
      }
      .content-area :global(.collapse-title::-webkit-details-marker) {
        display: none;
      }
      .content-area :global(.collapse-title::before) {
        content: "";
        display: inline-block;
        width: 0.5rem;
        height: 0.5rem;
        border-right: 2px solid var(--accent-color);
        border-bottom: 2px solid var(--accent-color);
        transform: rotate(-45deg);
        transition: transform 0.2s ease;
        flex-shrink: 0;
      }
      .content-area :global(.collapse-block[open] .collapse-title::before) {
        transform: rotate(45deg);
      }
      .content-area :global(.collapse-content) {
        padding: 0 1.25rem 1rem;
        border-top: 1px solid var(--border-color);
        animation: collapseOpen 0.2s ease-out;
      }
      .content-area :global(.collapse-content > *:first-child) {
        margin-top: 1rem;
      }
      .content-area :global(.collapse-content > *:last-child) {
        margin-bottom: 0;
      }
      @keyframes collapseOpen {
        from {
          opacity: 0;
          transform: translateY(-10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </head>
  <body>
    <NavBarComponent client:load baseHref={baseHref} lang={lang} />
    <div class="layout-container">
      <SidebarComponent
        client:load
        items={sidebarItems}
        currentSlug={currentSlug}
        lang={lang}
      />
      <div>
        <main class="content-area">
          <slot />
        </main>
        {showComments && <div id="giscus-container" />}
      </div>
      <OnThisPageComponent client:load headings={headings} lang={lang} />
    </div>
    <SettingsDialogComponent client:load lang={lang} />
  </body>
</html>
